/* pages/publish/publish.wxss */

.container {
  padding: 20px;
  background-color: #fff;
  min-height: 100vh;
}

/* 表单组件样式 */
.form-group {
  margin-bottom: 20px;
}

.form-label {
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 44px;
  background-color: #f5f5f5;
  border-radius: 8px;
  padding: 0 15px;
  font-size: 14px;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 120px;
  background-color: #f5f5f5;
  border-radius: 8px;
  padding: 10px 15px;
  font-size: 14px;
  color: #333;
  box-sizing: border-box;
}

/* 输入框焦点样式 */
.form-input:focus,
.form-textarea:focus {
  background-color: #f0f7ff;
}

/* 提示信息样式 */
.form-tips {
  margin: 20px 0;
  padding: 15px;
  background-color: #f6ffed;
  border-radius: 8px;
  border: 1rpx solid #b7eb8f;
}

.form-tips text {
  display: block;
  font-size: 12px;
  color: #52c41a;
  line-height: 1.8;
}

.form-tips text:first-child {
  color: #333;
  font-weight: bold;
  margin-bottom: 5px;
}

/* 按钮容器样式 */
.form-buttons {
  margin-top: 30px;
  display: flex;
  gap: 15px;
}

/* 取消按钮样式 */
.cancel-btn {
  flex: 1;
  height: 44px;
  line-height: 44px;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 22px;
  font-size: 16px;
  border: none;
}

/* 提交按钮样式 */
.submit-btn {
  flex: 1;
  height: 44px;
  line-height: 44px;
  background-color: #1890ff;
  color: #fff;
  border-radius: 22px;
  font-size: 16px;
  border: none;
}

/* 按钮禁用状态 */
.submit-btn[disabled] {
  background-color: #bae7ff;
  color: #fff;
}

/* 按钮悬停效果 */
.button-hover {
  opacity: 0.8;
}

/* 输入框占位符样式 */
.form-input::placeholder,
.form-textarea::placeholder {
  color: #999;
}

/* 必填标记样式 */
.form-label::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4px;
}

/* 金额输入框特殊样式 */
.form-input[type="digit"] {
  font-family: monospace;
  letter-spacing: 1px;
}

/* 表单校验错误样式 */
.form-error {
  color: #ff4d4f;
  font-size: 12px;
  margin-top: 4px;
}

/* 加载状态样式 */
.submit-btn[loading] {
  opacity: 0.8;
}